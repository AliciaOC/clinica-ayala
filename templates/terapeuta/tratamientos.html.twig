						<td>{{ tratamiento.nombre }}</td>
						<td><a href='{{ path('terapeuta_borrarTratamiento', {'id': tratamiento.id}) }}'>Borrar</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
