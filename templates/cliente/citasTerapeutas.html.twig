{% extends 'cliente/index.html.twig' %}
{% block title %}Citas y Terapeutas
{% endblock %}
{% block main %}
	<section id="terapeutas_cliente">
        <h3>Terapeutas</h3>
        <ul class="list-group list-group-flush">
		    {% for terapeuta in terapeutas %}
                <li class="list-group-item">{{ terapeuta.nombre }}: {{ terapeuta.titulacion }}</li>
            {% endfor %}
        </ul>
	</section>
	<section id="citas_clientes">
		<h3>Citas</h3>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Motivo</th>
					<th>Terapeuta</th>
                    <th>Estado</th>
                    <th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for cita in citas %}
					<tr>
						<td>{{ cita.fecha|date('d/m/Y H:i') }}</td>
                        <td>{{ cita.motivo }}</td>
                        <td>{{ cita.terapeuta.nombre }}</td>
                        <td class="estado_cita">{{ cita.estado }}</td>
						<td>
                        {% if cita.estado=='pendiente' %}
							<button class="btn-accion btn" type="button" data-bs-toggle="modal" data-bs-target="#modalConfirm" data-url="{{ path('terapeuta_cancelarCita', {'id': cita.id, 'origen': 'app_cliente_citas_terapeutas'}) }}">Cancelar Cita</button>
                        {% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}
