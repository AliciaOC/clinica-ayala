{% extends 'admin/indexAdmin.html.twig' %}

{% block title %}Editar Tratamiento
{% endblock %}

{% block main %}
	<h3>Editar Tratamiento Seleccionado:
		{{ nombreTratamiento }}</h3>
	<section id="editar-tratamiento">
		{{ form(editarTratamientoForm) }}
		{% for message in app.flashes('error') %}
			<div class="flash-error">
				{{ message }}
			</div>
		{% endfor %}
		<a class="enlace_cancelar" href="{{ path('app_admin_tratamientos') }}">Cancelar</a>
	</section>
{% endblock %}
