{% extends 'base.html.twig' %}
{% block title %}Cambio Contraseña
{% endblock %}

{% block body %}
	<section id="cambio_password">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		<h1 class="titulo">Cambio de Contraseña</h1>

		{{ form(cambioPasswordForm) }}
		{% for message in app.flashes('error') %}
			<div>
				{{ message }}
			</div>
		{% endfor %}

		{% if nuevo %}
			<a id="enlace_volver" href="{{ path('app_home') }}">Volver a la página de la Clínica</a>
		{% else %}
			<a id="enlace_volver" href="{{ path('app_login_redirect') }}">Volver al espacio personal</a>
		{% endif %}
	</section>
{% endblock %}
