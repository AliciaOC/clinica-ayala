        <article id="contacto_mapa">
            <ul id="contacto_main" class="contacto_lista">
                <li><img src=" {{ asset('imagenes/map.svg') }} " alt="Ubicación" class="icono_contacto">Avenida Francisco Ayala s/n</li>
                <li><a href="tel:+34000000000"><img src=" {{ asset('imagenes/tlf.svg') }} " alt="Teléfono de contacto" class="icono_contacto"> +34 000000000</a></li>
            </ul>
