{% extends 'admin/indexAdmin.html.twig' %}

{% block title %}Editar Cliente
{% endblock %}

{% block main %}
	<h3>Editar Cliente: {{ cliente.nombre }}</h1>
	<section id="editar-cliente">
		{{form_start(formEditCliente) }}
			{{ form_widget(formEditCliente) }}
			<button class="btn btn-primary" type="submit">Guardar</button>
			<a class="enlace_cancelar enlace_form" href="{{ path('app_admin_clientes') }}">Cancelar</a>
		{{ form_end(formEditCliente) }}

		{% for message in app.flashes('error') %}
			<div class="flash-error">
				{{ message }}
			</div>
		{% endfor %}
	</section>

{% endblock %}
